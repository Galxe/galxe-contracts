{
  "name": "galxe-contracts",
  "version": "1.0.0",
  "description": "Galxe contracts",
  "main": "index.js",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf ./artifacts ./cache ./dist ./coverage ./types ./coverage.json && yarn typechain",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp build/artifacts --testfiles \"test/**/*.ts\"",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain",
    "export-types": "copyfiles -u 1 \"typechain-types/**/*.ts\" dist/typechain-types",
    "prepare:release": "yarn clean && yarn compile && yarn export-types"
  },
  "devDependencies": {
    "@matterlabs/hardhat-zksync-verify": "^1.2.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@openzeppelin-v3/contracts": "npm:@openzeppelin/contracts@v3",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "^8.0.0",
    "@types/chai": "^4.3.4",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "chai": "^4.3.7",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "ethers": "^6.11.1",
    "fs-extra": "^10.1.0",
    "hardhat": "^2.21.0",
    "hardhat-deploy": "^0.12.2",
    "hardhat-gas-reporter": "^1.0.9",
    "lodash": "^4.17.21",
    "mocha": "^10.1.0",
    "prettier": "^2.8.4",
    "prettier-plugin-solidity": "^1.1.2",
    "rimraf": "^4.1.2",
    "solhint": "^3.4.0",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.5",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.2.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.0.0"
  }
}
